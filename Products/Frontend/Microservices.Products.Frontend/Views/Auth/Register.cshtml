@using Microservices.Products.Frontend.Features.Auth.Dtos

@model RegisterRequestDto

@{
    var roleList = ViewBag.RoleList;
}

<form method="post">
    <div class="container border-p-4">
        <div class="row text-center">
            <h1>Register</h1>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="UserName" class="form-control" placeholder="Username..." />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" class="form-control" placeholder="Password..." />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Phone" class="form-control" placeholder="Phone..." />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Email" class="form-control" placeholder="Email..." />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-6 offset-3 pb-2">
                <select asp-for="Role" asp-items="roleList" class="form-select"></select>
            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="form-control btn-success" value="Submit">Register</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}